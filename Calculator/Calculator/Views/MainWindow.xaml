<Window x:Class="ModernCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="500" Width="350"
        Background="#1E1E1E" Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <TextBox x:Name="txtDisplay"
                 FontSize="32" 
                 Height="70"
                 Background="#292929"
                 Foreground="White"
                 TextAlignment="Right"
                 Padding="10"
                 IsReadOnly="True"
                 VerticalContentAlignment="Center"
                 Margin="10"/>

        <!-- Buttons Grid -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Memory Functions -->
            <Button Grid.Row="0" Grid.Column="0" Content="MC" Click="MemoryClear_Click"/>
            <Button Grid.Row="0" Grid.Column="1" Content="MR" Click="MemoryRecall_Click"/>
            <Button Grid.Row="0" Grid.Column="2" Content="M+" Click="MemoryAdd_Click"/>
            <Button Grid.Row="0" Grid.Column="3" Content="M-" Click="MemorySubtract_Click"/>

            <!-- Clear Functions -->
            <Button Grid.Row="1" Grid.Column="0" Content="%" Click="Percent_Click"/>
            <Button Grid.Row="1" Grid.Column="1" Content="CE" Click="ClearEntry_Click"/>
            <Button Grid.Row="1" Grid.Column="2" Content="C" Click="Clear_Click"/>
            <Button Grid.Row="1" Grid.Column="3" Content="⌫" Click="Backspace_Click"/>

            <!-- Math Functions -->
            <Button Grid.Row="2" Grid.Column="0" Content="1/x" Click="Reciprocal_Click"/>
            <Button Grid.Row="2" Grid.Column="1" Content="x²" Click="Square_Click"/>
            <Button Grid.Row="2" Grid.Column="2" Content="√x" Click="SquareRoot_Click"/>
            <Button Grid.Row="2" Grid.Column="3" Content="/" Click="Operator_Click"/>

            <!-- Numbers & Operations -->
            <Button Grid.Row="3" Grid.Column="0" Content="7" Click="Button_Click"/>
            <Button Grid.Row="3" Grid.Column="1" Content="8" Click="Button_Click"/>
            <Button Grid.Row="3" Grid.Column="2" Content="9" Click="Button_Click"/>
            <Button Grid.Row="3" Grid.Column="3" Content="*" Click="Operator_Click"/>

            <Button Grid.Row="4" Grid.Column="0" Content="4" Click="Button_Click"/>
            <Button Grid.Row="4" Grid.Column="1" Content="5" Click="Button_Click"/>
            <Button Grid.Row="4" Grid.Column="2" Content="6" Click="Button_Click"/>
            <Button Grid.Row="4" Grid.Column="3" Content="-" Click="Operator_Click"/>

            <Button Grid.Row="5" Grid.Column="0" Content="1" Click="Button_Click"/>
            <Button Grid.Row="5" Grid.Column="1" Content="2" Click="Button_Click"/>
            <Button Grid.Row="5" Grid.Column="2" Content="3" Click="Button_Click"/>
            <Button Grid.Row="5" Grid.Column="3" Content="+" Click="Operator_Click"/>

            <Button Grid.Row="6" Grid.Column="0" Content="+/-" Click="Negate_Click"/>
            <Button Grid.Row="6" Grid.Column="1" Content="0" Click="Button_Click"/>
            <Button Grid.Row="6" Grid.Column="2" Content="." Click="Button_Click"/>
            <Button Grid.Row="6" Grid.Column="3" Content="=" Click="Equals_Click" Background="#4CAF50" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
