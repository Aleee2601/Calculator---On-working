<Window x:Class="Calculator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:Calculator.Views"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="678" Width="350"
        Background="#1E1E1E" Foreground="White"
        FontFamily="Segoe UI">

    <Window.Resources>
   

        <!-- General Button Style -->
        <Style TargetType="Button" x:Key="CalcButtonStyle">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModeToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{TemplateBinding Content}"
                                       HorizontalAlignment="Center"
                                       FontWeight="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToFontWeightConverter}}"/>
                            <Rectangle Height="2"
                                       Fill="#0078D7"
                                       Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Equals (=) Button Style -->
        <Style TargetType="Button" x:Key="EqualsButtonStyle" BasedOn="{StaticResource CalcButtonStyle}">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>




    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top row with mode and display -->
            <RowDefinition Height="*"/>
            <!-- The rest of the content -->
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top bar: hamburger + Standard -->
                <RowDefinition Height="Auto"/>
                <!-- Display -->
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Hamburger -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Mode label -->
                    <ColumnDefinition Width="*"/>
                    <!-- Spacer if needed -->
                </Grid.ColumnDefinitions>

                <!-- Hamburger Button -->
                <Button Content="☰"
                FontSize="18"
                Width="30"
                Height="30"
                Background="Transparent"
                BorderThickness="0"
                Foreground="White"
                Cursor="Hand"
                Click="Hamburger_Click" VerticalAlignment="Top" />

                <!-- Mode Label -->
                <TextBlock Grid.Column="1"
                   Text="{Binding CurrentMode}"
                   VerticalAlignment="Center"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="10,0"
                   Foreground="White" />
            </Grid>

            <!-- Display TextBox under the selector -->
            <TextBox x:Name="txtDisplay"
            Text="{Binding DisplayText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             Grid.Row="1"
             FontSize="36"
             Background="#1E1E1E"
             Foreground="White"
             TextAlignment="Right"
             Padding="10"
             IsReadOnly="True"
             BorderThickness="0"
             VerticalContentAlignment="Center"
             Height="80"
             Margin="0,10,0,10"
             TextChanged="txtDisplay_TextChanged"
             HorizontalAlignment="Stretch"/>
        </Grid>



        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <Grid x:Name="StandardGrid" Visibility="Collapsed">
                <!-- Visibility="Collapsed" -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Memory buttons -->
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <!-- MEMORY BUTTONS GRID (top row) -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Column="0" Content="MC" Command="{Binding MemoryClearCommand}"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Column="1" Content="MR" Command="{Binding MemoryRecallCommand}"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Column="2" Content="M+" Command="{Binding MemoryPlusCommand}"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Column="3" Content="M-" Command="{Binding MemoryMinusCommand}"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Column="4" Content="MS"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Column="5" Content="M˅"/>
                </Grid>

                <!-- MAIN BUTTONS GRID (6x4) -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 0 -->
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="0" Grid.Column="0" Content="%" CommandParameter="%"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="0" Grid.Column="1" Content="CE" Command="{Binding ClearEntryCommand}"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="0" Grid.Column="2" Content="C" Command="{Binding ClearCommand}"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="0" Grid.Column="3" Content="⌫" Command="{Binding BackspaceCommand}"/>

                    <!-- Row 1 -->
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="0" Content="1/x" CommandParameter="1/x"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="1" Content="x²" CommandParameter="pow"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="2" Content="√x" CommandParameter="sqrt"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="3" Content="÷" CommandParameter="/"/>

                    <!-- Row 2 -->
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="0" Content="7" CommandParameter="7"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="1" Content="8" CommandParameter="8"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="2" Content="9" CommandParameter="9"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="3" Content="×" CommandParameter="*"/>

                    <!-- Row 3 -->
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="0" Content="4" CommandParameter="4"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="1" Content="5" CommandParameter="5"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="2" Content="6" CommandParameter="6"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="3" Content="−" CommandParameter="-"/>

                    <!-- Row 4 -->
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="0" Content="1" CommandParameter="1"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="1" Content="2" CommandParameter="2"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="2" Content="3" CommandParameter="3"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="3" Content="+" CommandParameter="+"/>

                    <!-- Row 5 -->
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="0" Content="±" CommandParameter="+/-"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="1" Content="0" CommandParameter="0"/>
                    <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="2" Content="." CommandParameter="."/>
                    <Button Style="{StaticResource EqualsButtonStyle}" Grid.Row="5" Grid.Column="3" Content="=" CommandParameter="="/>
                </Grid>
            </Grid>
            <Grid x:Name="ProgrammerGrid" Visibility="Visible">   
                 <!--  Visibility="Visible" -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Labels -->
                    <RowDefinition Height="*"/>
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- HEX / DEC / OCT / BIN labels -->
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="HEX" Width="40"/>
                        <TextBlock Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="DEC" Width="40"/>
                        <TextBlock Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="OCT" Width="40"/>
                        <TextBlock Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="BIN" Width="40"/>
                        <TextBlock Text="0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right side: Buttons and layout -->
                <StackPanel Margin="0,10,0,10" Grid.Row="1">
                    <!-- Memory buttons -->
                    <UniformGrid Columns="6" Margin="0,0,0,10">
                        <Button Content="MC" Command="{Binding MemoryClearCommand}" Style="{StaticResource CalcButtonStyle}"/>
                        <Button Content="MR" Command="{Binding MemoryRecallCommand}" Style="{StaticResource CalcButtonStyle}"/>
                        <Button Content="M+" Command="{Binding MemoryPlusCommand}" Style="{StaticResource CalcButtonStyle}"/>
                        <Button Content="M-" Command="{Binding MemoryMinusCommand}" Style="{StaticResource CalcButtonStyle}"/>
                        <Button Content="MS" Style="{StaticResource CalcButtonStyle}"/>
                        <Button Content="M˅" Style="{StaticResource CalcButtonStyle}"/>
                    </UniformGrid>

                    <!-- Main 6x5 button grid -->
                    <Grid Height="314">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Fill in buttons as you already have, adjusting Grid.Row and Grid.Column -->
                        <!-- Row 0 -->
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="0" Grid.Column="0" Content="A" CommandParameter="A"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="0" Grid.Column="1" Content="%" CommandParameter="%"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="0" Grid.Column="2" Content="CE" Command="{Binding ClearEntryCommand}"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="0" Grid.Column="3" Content="C" Command="{Binding ClearCommand}"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="0" Grid.Column="4" Content="⌫" Command="{Binding BackspaceCommand}"/>

                        <!-- Row 1 -->
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="0" Content="B" CommandParameter="B"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="1" Content="1/x" CommandParameter="1/x"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="2" Content="x²" CommandParameter="pow"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="3" Content="√x" CommandParameter="sqrt"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="4" Content="÷" CommandParameter="/"/>

                        <!-- Row 2 -->
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="0" Content="C" CommandParameter="C"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="1" Content="7" CommandParameter="7"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="2" Content="8" CommandParameter="8"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="3" Content="9" CommandParameter="9"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="4" Content="×" CommandParameter="*"/>

                        <!-- Row 3 -->
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="0" Content="D" CommandParameter="D"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="1" Content="4" CommandParameter="4"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="2" Content="5" CommandParameter="5"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="3" Content="6" CommandParameter="6"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="4" Content="−" CommandParameter="-"/>

                        <!-- Row 4 -->
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="0" Content="E" CommandParameter="E"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="1" Content="1" CommandParameter="1"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="2" Content="2" CommandParameter="2"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="3" Content="3" CommandParameter="3"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="4" Content="+" CommandParameter="+"/>

                        <!-- Row 5 -->
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="0" Content="F" CommandParameter="F"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="1" Content="±" CommandParameter="+/-"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="2" Content="0" CommandParameter="0"/>
                        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="3" Content="." CommandParameter="."/>
                        <Button Style="{StaticResource EqualsButtonStyle}" Grid.Row="5" Grid.Column="4" Content="=" CommandParameter="="/>


                        <!-- Continue with other rows like this... -->
                    </Grid>
                </StackPanel>
            </Grid>


        </Grid>
    </Grid>

</Window>
