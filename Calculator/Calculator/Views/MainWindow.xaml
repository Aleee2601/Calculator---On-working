<Window x:Class="Calculator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="500" Width="350"
        Background="#1E1E1E" Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Mode Selection -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <RadioButton Content="Standard  " IsChecked="True"/>
            <RadioButton Content="Programmer" Checked="RadioButton_Checked"/>
        </StackPanel>


        <!-- Display -->
        <TextBox x:Name="txtDisplay"
                 FontSize="32"
                 Background="#292929"
                 Foreground="White"
                 TextAlignment="Right"
                 Padding="10"
                 IsReadOnly="True"
                 VerticalContentAlignment="Center"
                 Margin="10,31,10,10"/>

        <!-- 
            TODO:
            - add MS adnd MscrollDown
            - add a menu for standard and programmer calculator
            
        -->


        <!-- Buttons Grid -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Memory Functions -->
            <Button Grid.Row="0" Grid.Column="0" Content="MC" Command="{Binding MemoryClearCommand}"/>
            <Button Grid.Row="0" Grid.Column="1" Content="MR" Command="{Binding MemoryRecallCommand}"/>
            <Button Grid.Row="0" Grid.Column="2" Content="M+" Command="{Binding MemoryPlusCommand}"/>
            <Button Grid.Row="0" Grid.Column="3" Content="M-" Command="{Binding MemoryMinusCommand}"/>

            <!-- Clear Functions -->
            <Button Grid.Row="1" Grid.Column="0" Content="%" Command="{Binding OperatorCommand}" CommandParameter="%"/>
            <Button Grid.Row="1" Grid.Column="1" Content="CE" Command="{Binding ClearEntryCommand}"/>
            <Button Grid.Row="1" Grid.Column="2" Content="C" Command="{Binding ClearCommand}"/>
            <Button Grid.Row="1" Grid.Column="3" Content="⌫" Command="{Binding BackspaceCommand}"/>

            <!-- Math Functions -->
            <Button Grid.Row="2" Grid.Column="0" Content="1/x" Command="{Binding OperatorCommand}" CommandParameter="1/x"/>
            <Button Grid.Row="2" Grid.Column="1" Content="x²" Command="{Binding OperatorCommand}" CommandParameter="pow"/>
            <Button Grid.Row="2" Grid.Column="2" Content="√x" Command="{Binding OperatorCommand}" CommandParameter="sqrt"/>
            <Button Grid.Row="2" Grid.Column="3" Content="/" Command="{Binding OperatorCommand}" CommandParameter="/"/>

            <!-- Numbers & Operations -->
            <Button Grid.Row="3" Grid.Column="0" Content="7" Command="{Binding NumberCommand}" CommandParameter="7"/>
            <Button Grid.Row="3" Grid.Column="1" Content="8" Command="{Binding NumberCommand}" CommandParameter="8"/>
            <Button Grid.Row="3" Grid.Column="2" Content="9" Command="{Binding NumberCommand}" CommandParameter="9"/>
            <Button Grid.Row="3" Grid.Column="3" Content="*" Command="{Binding OperatorCommand}" CommandParameter="*"/>

            <Button Grid.Row="4" Grid.Column="0" Content="4" Command="{Binding NumberCommand}" CommandParameter="4"/>
            <Button Grid.Row="4" Grid.Column="1" Content="5" Command="{Binding NumberCommand}" CommandParameter="5"/>
            <Button Grid.Row="4" Grid.Column="2" Content="6" Command="{Binding NumberCommand}" CommandParameter="6"/>
            <Button Grid.Row="4" Grid.Column="3" Content="-" Command="{Binding OperatorCommand}" CommandParameter="-"/>

            <Button Grid.Row="5" Grid.Column="0" Content="1" Command="{Binding NumberCommand}" CommandParameter="1"/>
            <Button Grid.Row="5" Grid.Column="1" Content="2" Command="{Binding NumberCommand}" CommandParameter="2"/>
            <Button Grid.Row="5" Grid.Column="2" Content="3" Command="{Binding NumberCommand}" CommandParameter="3"/>
            <Button Grid.Row="5" Grid.Column="3" Content="+" Command="{Binding OperatorCommand}" CommandParameter="+"/>

            <Button Grid.Row="6" Grid.Column="0" Content="+/-" Command="{Binding OperatorCommand}" CommandParameter="+/-"/>
            <Button Grid.Row="6" Grid.Column="1" Content="0" Command="{Binding NumberCommand}" CommandParameter="0"/>
            <Button Grid.Row="6" Grid.Column="2" Content="." Command="{Binding OperatorCommand}" CommandParameter="."/>
            <Button Grid.Row="6" Grid.Column="3" Content="=" Command="{Binding OperatorCommand}" CommandParameter="=" Background="#4CAF50" Foreground="White"/>
        </Grid>
    </Grid>
</Window>